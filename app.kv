BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "List Required"
                on_release: app.list_required()
            Button:
                text: "List Completed"
                on_release: app.list_completed()
        BoxLayout:
            #orientation 'horizontal'
            Label:
                id: total_cost_label
                size_hint_y: 0.1
            Button:
                id: entry_box
                cols: 1
                orientation: 'vertical'
    Label:
        id: status_label
        size_hint_y: 0.1
        text: app.status_text